<div id="main_content">
		<div id="header">	
			<div class="buttons">
				<button class="button">New Game</button>
				<button class="button">New Team Member</button>
			</div>
		</div>
</div>

<div id="team_content">
	<h1 class="name">
		<%= @team.name %>
	</h1>

	<p class="sport">
		<%= @team.sport %>
			<% if user_signed_in? %>
			| <%= link_to 'Edit', edit_team_path(@team) %>
			| <%= link_to 'Delete', team_path(@team), method: :delete, data: { confirm: 'Are you sure?'} %>
		<% end %>
	</p>

	<div id="games">
		<h2><%= pluralize(@team.games.count, "Game") %></h2>
		<%= render @team.games %>

		<h3>Add a game:</h3>
		<%= render "games/form" %>
	</div>

	<div id="members">
		<h2><%= pluralize(@team.members.count, "Member") %></h2>
		<%= render @team.members %>

		<h3>Add a member:</h3>
		<%= render "members/form" %>
	</div>
</div>